<%- include('../partials/header', { user }) %>

<div class="container text-center">

  <form action="/profile/workouts" method="POST">
    <div class="row form-group">
      <label for="date" class="col-auto form-label">Date</label>
      <input type="date" class="col-auto form-control" id="date" name="date" required>
    </div>
    
    <div class="row form-group">
      <label for="exercise" class="col-auto form-label">Exercise Name</label>
      <input type="text" class="col-auto form-control" id="exercise" name="exercise" required>
    </div>
    
    <div class="row form-group">
      <label for="weight" class="col-auto form-label">Weight</label>
      <input type="number" class="col-auto form-control" id="weight" name="weight" required>
    </div>
    
    <div class="row form-group">
      <label for="reps" class="col-auto form-label">Reps</label>
      <input type="number" class="col-auto form-control" id="reps" name="reps" required>
    </div>

    <input type="submit" class="btn btn-primary">
  </form>
  
  <h3>My Workout History</h3>
  
  <% if (user.workouts.length < 1) { %>
    <h4>You haven't recorded any workouts yet!</h4>
    <% } %>
    
    <% user.workouts.forEach((workout) => { %>
      <div>
        <a href="/profile/workouts/<%= workout.id %>">Date: <%= workout.date.toDateString() %> - Exercise: <%= workout.exercise %> - Weight: <%= workout.weight %> - Reps: <%= workout.reps %></a>
      </div>
      <% }) %>
      
    </div>
<%- include('../partials/footer') %>
